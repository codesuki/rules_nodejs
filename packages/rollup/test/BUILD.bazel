load("@npm_bazel_jasmine//:index.from_src.bzl", "jasmine_node_test")
load("@npm_bazel_rollup//:index.from_src.bzl", "rollup_bundle")

[
    rollup_bundle(
        name = "bundle.%s" % format,
        srcs = ["bar.js"],
        config_file = "rollup.config.js",
        entry_point = ":foo.js",
        format = format,
        deps = [
            "//packages/rollup/test/fum:fumlib",
            "@npm//hello",
        ],
    )
    for format in [
        "cjs",
        "umd",
    ]
]

jasmine_node_test(
    name = "test",
    srcs = [
        "rollup_spec.js",
    ],
    data = glob(["*.js_"]),
    deps = [
        ":bundle.cjs",
        ":bundle.umd",
    ],
)
